# OpenAI API Key (optional; system works without it)
OPENAI_API_KEY=your_key_here

# Chroma Vector DB path
CHROMA_DB_PATH=./chroma_db

# Logging
LOG_LEVEL=INFO

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# OpenF1 API Configuration
OPENF1_BASE_URL=https://api.openf1.org
OPENF1_CACHE_TIMEOUT_HOURS=24
OPENF1_RETRY_MAX_ATTEMPTS=3
OPENF1_RETRY_BACKOFF_FACTOR=1.5

# RAG Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=512
CHUNK_OVERLAP=128
RETRIEVAL_TOP_K=5

# LLM Configuration (can be mock)
LLM_MODE=mock  # or 'openai' or 'local'
